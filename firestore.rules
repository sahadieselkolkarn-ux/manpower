
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // --- Strict User Data Rule ---
    // This rule is more specific and is evaluated before the general dev rule.
    // It restricts access to a user's own document.
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // --- DEV MODE GLOBAL OVERRIDE ---
    // This rule allows any authenticated user to read/write ANY document
    // in the database, except for those matched by more specific rules above (i.e., /users).
    // This is for development purposes only to prevent permission errors.
    // This is NOT secure for production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
