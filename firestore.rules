
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // --- Rule Definitions ---

    // USERS: Stays relatively secure. Owner can write, Admin can do anything.
    // This is more complex than a simple isOwner check but is safer.
    function isBootstrapAdminAllowlisted() {
      return securityDoc().bootstrap.isOpen == true && request.auth.token.email in securityDoc().bootstrap.adminEmailsAllowlist;
    }

    function securityDoc() {
      return get(/databases/$(database)/documents/settings/security).data;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId); // Simplified for now
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ROLES: Allow read for any signed-in user, write for admin.
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // SETTINGS: Admin-only
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
    
    // --- DEV MODE OVERRIDE ---
    // The following collections are open to any authenticated user for development purposes.
    // This is NOT secure for production.
    
    // HR Master Data
    match /employees/{id} { allow read, write: if isSignedIn(); }
    match /hospitals/{id} { allow read, write: if isSignedIn(); }
    match /certificateTypes/{id} { allow read, write: if isSignedIn(); }
    match /officePositions/{id} { allow read, write: if isSignedIn(); }
    match /manpowerPositions/{id} { allow read, write: if isSignedIn(); }
    match /positions/{id} { allow read, write: if isSignedIn(); } // Legacy
    match /cooldownPolicies/{id} { allow read, write: if isSignedIn(); }
    
    // Timesheet Collections
    match /timesheetBatches/{id} { allow read, write: if isSignedIn(); }
    match /timesheetLines/{id} { allow read, write: if isSignedIn(); }
    match /timesheetTemplates/{id} { allow read, write: if isSignedIn(); }
    match /timesheetTemplateVersions/{id} { allow read, write: if isSignedIn(); }

    // Finance Collections
    match /payrolls/{id} { allow read, write: if isSignedIn(); }
    match /taxProfiles/{id} { allow read, write: if isSignedIn(); }
    match /bankAccounts/{id} { allow read, write: if isSignedIn(); }
    match /invoices/{id} { allow read, write: if isSignedIn(); }
    match /billsAP/{id} { allow read, write: if isSignedIn(); }
    match /paymentsAR/{id} { allow read, write: if isSignedIn(); }
    match /paymentsAP/{id} { allow read, write: if isSignedIn(); }
    match /cashMovements/{id} { allow read, write: if isSignedIn(); }
    
    // Operation Data (Clients Tree)
    match /clients/{clientId}/{document=**} {
      allow read, write: if isSignedIn();
    }

    // Exports & Other
    match /exports/{id} { allow read, write: if isSignedIn(); }
    match /audit-logs/{id} { allow read, write: if isSignedIn(); }
    match /companyProfile/{id} { allow read, write: if isSignedIn(); }

  }
}
