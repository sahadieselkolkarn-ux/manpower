
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function myUid() { return request.auth.uid; }
    function myEmail() { return request.auth.token.email; }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(myUid())).data;
    }

    function securityDoc() {
      return get(/databases/$(database)/documents/settings/security).data;
    }

    function securityExists() {
      return exists(/databases/$(database)/documents/settings/security);
    }

    function bootstrapIsOpen() {
      return securityExists()
        && securityDoc().bootstrap != null
        && securityDoc().bootstrap.isOpen == true;
    }

    function isBootstrapAdminAllowlisted() {
      return bootstrapIsOpen()
        && (myEmail() in securityDoc().bootstrap.adminEmailsAllowlist);
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(myUid()))
        && userDoc().isAdmin == true;
    }

    function hasRoleCode(roleCode) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(myUid()))
        && userDoc().roleCodes != null
        && (roleCode in userDoc().roleCodes);
    }

    function isHR() {
      return isAdmin()
        || hasRoleCode("HR_OFFICER")
        || hasRoleCode("HR_MANAGER");
    }
    
    function isHRManager() {
       return isAdmin() || hasRoleCode("HR_MANAGER");
    }

    function isFinance() {
      return isAdmin()
        || hasRoleCode("PAYROLL_OFFICER")
        || hasRoleCode("FINANCE_OFFICER")
        || hasRoleCode("FINANCE_MANAGER");
    }

    function isOperation() {
      return isAdmin()
        || hasRoleCode("OPERATION_OFFICER")
        || hasRoleCode("OPERATION_MANAGER");
    }

    function isInternalStaff() {
      return isHR() || isFinance() || isOperation() || isAdmin();
    }

    function isOwner(userId) {
      return isSignedIn() && myUid() == userId;
    }

    // SETTINGS: bootstrap allowlist lives here
    match /settings/security {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /companyProfile/PRIMARY {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // USERS
    match /users/{userId} {

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      allow create: if isOwner(userId)
        && request.resource.data.uid == myUid()
        && request.resource.data.email == myEmail()
        && request.resource.data.status == "ACTIVE"
        && (
          (
            isBootstrapAdminAllowlisted()
            && request.resource.data.isAdmin == true
            && request.resource.data.roleCodes != null
            && ("ADMIN" in request.resource.data.roleCodes)
          )
          ||
          (
            !isBootstrapAdminAllowlisted()
            && request.resource.data.isAdmin == false
            && (
              request.resource.data.roleCodes == null
              || request.resource.data.roleCodes.size() == 0
            )
          )
        );

      allow update: if isAdmin()
        || (
          isOwner(userId)
          && request.resource.data.isAdmin == resource.data.isAdmin
          && request.resource.data.roleIds == resource.data.roleIds
          && request.resource.data.roleCodes == resource.data.roleCodes
          && request.resource.data.status == resource.data.status
          && request.resource.data.email == resource.data.email
          && request.resource.data.uid == resource.data.uid
        );

      allow delete: if isAdmin();
    }

    // ROLES master
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // HR master
    match /employees/{id} {
      allow read: if isHR() || isFinance() || isAdmin();
      allow write: if isHR() || isAdmin();
    }
    match /hospitals/{id} { allow read, write: if isHR() || isAdmin(); }
    match /certificateTypes/{id} { allow read, write: if isHR() || isAdmin(); }
    match /officePositions/{id} { allow read, write: if isHR() || isAdmin(); }
    match /manpowerPositions/{id} { allow read, write: if isHR() || isAdmin(); }
    match /cooldownPolicies/{id} { allow read, write: if isHR() || isAdmin(); }


    // Timesheets
    match /timesheetBatches/{batchId} {
      allow read: if isHR() || isFinance() || isAdmin();
      allow create: if isHR();
      allow update: if (isHRManager() && resource.data.status == 'DRAFT') || 
                       (isFinance() && resource.data.status == 'HR_APPROVED');
    }
    
    match /timesheetLines/{lineId} {
      allow read: if isHR() || isFinance() || isAdmin();
      function canEditTimesheet() {
        let batchId = request.resource.data.batchId;
        let batch = get(/databases/$(database)/documents/timesheetBatches/$(batchId)).data;
        return batch.status == 'DRAFT' && (isHR() || isAdmin());
      }
      allow create, update: if canEditTimesheet();
      allow delete: if isHR() || isAdmin();
    }

    // Finance (placeholders but protected)
    match /payrolls/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /taxProfiles/{id} { allow read, write: if isFinance() || isOwner(resource.data.personRefId) || isHR(); }
    match /bankAccounts/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /invoices/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /billsAP/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /paymentsAR/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /paymentsAP/{id} { allow read, write: if isFinance() || isAdmin(); }
    match /cashMovements/{id} { allow read, write: if isFinance() || isAdmin(); }

    // Operation data (clients tree)
    match /clients/{clientId} {
      allow read: if isInternalStaff();
      allow write: if isOperation() || isAdmin();

      match /contracts/{contractId} {
        allow read: if isInternalStaff();
        allow write: if isOperation() || isAdmin();

        match /projects/{projectId} {
          allow read: if isInternalStaff();
          allow write: if isOperation() || isAdmin();

          match /waves/{waveId} {
            allow read: if isInternalStaff();
            allow write: if isOperation() || isAdmin();
             match /assignments/{assignmentId} {
                allow read: if isInternalStaff();
                allow write: if isHR() || isOperation() || isAdmin();
            }
          }
        }
      }
    }

    match /audit-logs/{id} { allow read: if isAdmin(); allow create: if isSignedIn(); }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
