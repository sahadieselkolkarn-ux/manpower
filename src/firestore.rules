
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function myUid() { return request.auth.uid; }
    function myEmail() { return request.auth.token.email; }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(myUid())).data;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(myUid()))
        && userDoc().isAdmin == true;
    }
    
    function hasAnyRole(user, roles) {
      return isSignedIn()
        && user != null
        && user.roleCodes != null
        && user.roleCodes.hasAny(roles);
    }
    
    function canManageOperation() {
       return isAdmin() || hasAnyRole(userDoc(), ["OPERATION_MANAGER", "OPERATION_OFFICER", "MANAGEMENT_MANAGER"]);
    }
    
    function canManageHR() {
       return isAdmin() || hasAnyRole(userDoc(), ["HR_MANAGER", "HR_OFFICER", "MANAGEMENT_MANAGER"]);
    }
    
    function canManageHrSettings() {
       return isAdmin() || hasAnyRole(userDoc(), ["HR_MANAGER", "HR_OFFICER"]);
    }

    function canManageFinance() {
      return isAdmin() || hasAnyRole(userDoc(), ["FINANCE_MANAGER", "FINANCE_OFFICER", "PAYROLL_OFFICER", "MANAGEMENT_MANAGER"]);
    }

    function isOwner(userId) {
      return isSignedIn() && myUid() == userId;
    }

    // --- RULE DEFINITIONS ---

    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /companyProfile/PRIMARY {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /hrSettings/{docId} {
        allow read: if isSignedIn();
        allow write: if canManageHrSettings();
    }
    
    match /systemSettings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /cooldownPolicies/{docId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /counters/{docId} {
        allow read, write: if isSignedIn(); // System services need to update this
    }
    
    match /unique/{docId} {
        allow read, write: if isSignedIn(); // System services need to update this
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId)
        && request.resource.data.uid == myUid()
        && request.resource.data.email == myEmail()
        && request.resource.data.status == "PENDING"; // New users must be PENDING
      allow update: if isAdmin()
        || (
          isOwner(userId)
          && request.resource.data.isAdmin == resource.data.isAdmin
          && request.resource.data.roleIds == resource.data.roleIds
          && request.resource.data.roleCodes == resource.data.roleCodes
          && request.resource.data.status == resource.data.status
          && request.resource.data.email == resource.data.email
          && request.resource.data.uid == resource.data.uid
        );
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /clients/{clientId} {
        allow read: if canManageOperation() || canManageFinance();
        allow create, update, delete: if canManageOperation();
    }
    
    match /clients/{clientId}/contracts/{contractId} {
        allow read: if canManageOperation() || canManageFinance() || canManageHR();
        allow create, update: if canManageOperation() || canManageHR(); // HR needs to edit payroll OT rules
    }
    
    match /clients/{clientId}/contracts/{contractId}/projects/{projectId} {
        allow read: if canManageOperation() || canManageFinance() || canManageHR();
        allow create, update: if canManageOperation();
    }

    match /clients/{clientId}/contracts/{contractId}/projects/{projectId}/waves/{waveId} {
       allow read: if canManageOperation() || canManageFinance() || canManageHR();
       allow create, update: if canManageOperation();
       
       match /assignments/{assignmentId} {
         allow read, write: if canManageOperation() || canManageHR();
       }
    }
    
    match /employees/{employeeId} {
      allow read: if canManageHR() || canManageOperation() || canManageFinance();
      allow write: if canManageHR();
    }
    
    match /assignments/{assignmentId} {
       allow read, write: if canManageOperation() || canManageHR();
    }
    
    match /timesheetBatches/{batchId} {
        allow read: if canManageHR() || canManageFinance();
        allow create: if canManageHR();
        allow update: if (canManageHR() && resource.data.status == 'DRAFT') || (canManageFinance() && resource.data.status == 'HR_APPROVED');
    }
    
    match /timesheetLines/{lineId} {
      function batchId() {
        return (request.resource != null && request.resource.data.batchId != null)
          ? request.resource.data.batchId
          : resource.data.batchId;
      }
      function isBatchOpen() {
        let id = batchId();
        return id != null
          && get(/databases/$(database)/documents/timesheetBatches/$(id)).data.status == 'DRAFT';
      }
      allow read: if canManageHR() || canManageFinance();
      allow create, update, delete: if canManageHR() && isBatchOpen();
    }

    match /clients/{clientId}/contracts/{contractId}/manpowerCosting/{positionId} {
        allow read, write: if canManageHR();
    }
    
    match /clients/{clientId}/contracts/{contractId}/manpowerCostingHistory/{docId} {
        allow read, write: if canManageHR();
    }
    
    match /audit-logs/{id} { 
      allow read: if isAdmin();
      allow create: if isSignedIn();
    }
    
    match /payrolls/{payrollId} {
      allow read, create, update: if canManageFinance();
    }

    match /invoices/{invoiceId} {
      allow read, create, update: if canManageFinance();
    }

    match /manpowerPositions/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if canManageHrSettings();
    }

     match /officePositions/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if canManageHrSettings();
    }

    match /certificateTypes/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if canManageHrSettings();
    }
    
     match /hospitals/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if canManageHrSettings();
    }

     match /paymentsAR/{id} {
       allow read, create: if canManageFinance();
    }
    
     match /paymentsAP/{id} {
       allow read, create: if canManageFinance();
    }

     match /billsAP/{id} {
       allow read, create, update: if canManageFinance();
    }

     match /cashMovements/{id} {
       allow read, create: if canManageFinance();
    }

     match /bankAccounts/{id} {
       allow read, create, update: if canManageFinance();
    }
  }
}

    