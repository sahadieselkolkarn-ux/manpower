
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function myUid() { return request.auth.uid; }
    function myEmail() { return request.auth.token.email; }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(myUid())).data;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(myUid()))
        && userDoc().isAdmin == true;
    }

    function isRole(role) {
      return isSignedIn() && userDoc().roleCodes.hasAny([role]);
    }
    
    function isAnyRole(roles) {
       return isSignedIn() && userDoc().roleCodes.hasAny(roles);
    }
    
    function isInternalStaff() {
      return isSignedIn();
    }
    
    function canManageHR() {
       return isAnyRole(['HR_MANAGER', 'HR_OFFICER', 'MANAGEMENT_MANAGER']) || isAdmin();
    }

    function isOwner(userId) {
      return isSignedIn() && myUid() == userId;
    }

    // --- RULE DEFINITIONS ---

    match /settings/security {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /companyProfile/PRIMARY {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /systemSettings/overtimeCalculation {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId)
        && request.resource.data.uid == myUid()
        && request.resource.data.email == myEmail()
        && request.resource.data.status == "PENDING"; // New users must be PENDING
      allow update: if isAdmin()
        || (
          isOwner(userId)
          && request.resource.data.isAdmin == resource.data.isAdmin
          && request.resource.data.roleIds == resource.data.roleIds
          && request.resource.data.roleCodes == resource.data.roleCodes
          && request.resource.data.status == resource.data.status
          && request.resource.data.email == resource.data.email
          && request.resource.data.uid == resource.data.uid
        );
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow get, list: if isInternalStaff();
      allow create: if isAdmin();
      allow update, delete: if isAdmin() && resource.data.isProtected != true;
    }
    
    match /clients/{clientId}/contracts/{contractId} {
        allow update: if canManageHR() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['payrollOtRules', 'updatedAt']);
        // Allow other updates via DEV catch-all for now
    }
    
    match /clients/{clientId}/contracts/{contractId}/manpowerCosting/{positionId} {
        allow read, write: if canManageHR();
    }
    
    match /clients/{clientId}/contracts/{contractId}/manpowerCostingHistory/{docId} {
        allow read, write: if canManageHR();
    }
    
    match /audit-logs/{id} { 
      allow read: if isAdmin();
      allow create: if isSignedIn();
    }
    
    // DEV CATCH-ALL: prevent permission-denied from unknown collections breaking queries (esp. collectionGroup)
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
